//Программа для первой работы с PID и PPID
#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>
#include <sys/wait.h>

int main(){
    pid_t pid = fork();

    if (pid == 0)
    {
        printf("Baby is sleep");
        execlp("sleep","sleep","3", NULL);
        perror("Error in baby");
        exit(EXIT_FAILURE);
    }
    else if (pid > 0)
    {
        printf("Pid %d create baby pid %d\n", getpid(),pid);

        int status;
        waitpid(pid, &status, 0);

        if (WIFEXITED(status))
        {
            printf("Baby end with status %d\n" , WEXITSTATUS(status));
        }
        else{
            perror("Error when created\n");
            exit(EXIT_FAILURE);
        }   
    }
    return 0;
}
