//Программа Метод Гольбдака
#include <stdlib.h>
#include <stdio.h>
#include <stdbool.h>

bool is_prime(int num) {
    if (num <= 1) {
        return false; // Числа меньше или равные 1 не являются простыми
    }
    if (num <= 3) {
        return true;  // 2 и 3 - простые числа
    }
    if (num % 2 == 0 || num % 3 == 0) {
        return false; // Если делится на 2 или 3, то не простое
    }
    // Проверяем делители вида 6k +/- 1
    for (int i = 5; i * i <= num; i = i + 6) {
        if (num % i == 0 || num % (i + 2) == 0) {
            return false;
        }
    }
    return true;
}

int main() {
    int num;

    printf("Enter number >= 4\n");
    scanf(" %d", &num);

    if (num < 4 || num % 2 != 0) {
        printf("Wrong number\n");
        EXIT_FAILURE;
    }
    else {
        for (int num1 = 2; num1 <= num; num1++) {
            if (is_prime(num1)){
                int num2 = num - num1;
                if (is_prime(num2)) {
                    printf("%d = %d + %d\n", num, num1, num2);
                     break; }
            }
        }
    }
    return 0;
}
